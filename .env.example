# Example .env file for big_tx_watcher
# Telegram bot token and the chat ID where alerts will be sent
TELEGRAM_BOT_TOKEN=123456:ABC-DEF_your_token_here
TELEGRAM_CHAT_ID=-1001234567890

# Etherscan API key (required for ETH block -> transactions)
ETHERSCAN_API_KEY=YourEtherscanKey

# Threshold in USD for single-transaction alert
THRESHOLD_USD=5000000

# Poll interval in seconds
POLL_INTERVAL=12

# Optional: mempool.space base URL (default public instance)
MEMPOOL_BASE=https://mempool.space

# How long to keep seen transactions in cache (seconds)
SEEN_CACHE_SECONDS=7200
